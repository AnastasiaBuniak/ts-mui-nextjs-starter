{
    "extends": [
        "next/core-web-vitals",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80, // Equivalent to max-len
                "tabWidth": 2,
                "singleQuote": true
            }
        ]
    }
}